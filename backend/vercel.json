{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "MONGO_URL": "@mongo_url",
    "TOKEN_SECRET_KEY": "@token_secret_key",
    "APPPASSWORD": "@app_password",
    "GMAIL_USER": "@gmail_user"
  },
  "ignoreCommand": "echo 'Ignore node_modules and .env files'",
  "engines": {
    "node": "18.x"
  }
}
